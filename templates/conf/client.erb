<%
  bool2str = {
    true => 'yes',
    false => 'no'
  }
-%>
client <%= Array(@client_name).first %> {
<% if @ipaddr.include?(':') then -%>
    ipv6addr = <%= Array(@ipaddr).first %>
<% elsif ! @ipaddr.empty? -%>
    ipaddr = <%= Array(@ipaddr).first %>
<% end -%>
<% if @netmask then -%>
    netmask = <%= @netmask %>
<% end -%>
    secret = <%= @secret %>
<% if @shortname then -%>
    shortname = <%= @shortname %>
<% end -%>
    require_message_authenticator = <%= bool2str[@require_message_authenticator] %>
    nas_type = <%= @nas_type %>
<% if @login then -%>
    login = <%= @login %>
<% end -%>
<% if @password then -%>
    password = <%= @password %>
<% end -%>
<% if @virtual_server then -%>
    virtual_server = <%= @virtual_server %>
<% end -%>
<% if @coa_server then -%>
    coa-server = <%= @coa_server %>
<% end -%>
}
