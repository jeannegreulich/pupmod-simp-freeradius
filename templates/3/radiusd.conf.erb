prefix = /usr
exec_prefix = /usr
sysconfdir = /etc
localstatedir = <%= @localstatedir %>
sbindir = /usr/sbin
logdir = <%= @logdir %>
raddbdir = ${sysconfdir}/raddb
radacctdir = ${logdir}/radacct
name = radiusd
confdir = ${raddbdir}
modconfdir = ${raddbdir}/mods-config
certdir = ${raddbdir}/certs
cadir = ${raddbdir}/certs
run_dir = ${localstatedir}/run/${name}
db_dir = ${localstatedir}/lib/${name}
<% if @hardwaremodel.eql?("x86_64") then -%>
libdir = /usr/lib64/freeradius
<% else -%>
libdir = /usr/lib/freeradius
<% end -%>
pidfile = ${run_dir}/${name}.pid
correct_escapes = <%= @correct_escapes %>
max_request_time = <%= @max_request_time %>
cleanup_delay = <%= @cleanup_delay %>
max_requests = <%= @max_requests %>
hostname_lookups = <%= @hostname_lookups %>
checkrad = ${sbindir}/checkrad

$INCLUDE conf.d/

<% if @proxy_requests then -%>
proxy_requests  = yes
$INCLUDE proxy.conf
<% else -%>
proxy_requests = no
<% end -%>

$INCLUDE clients.d/

$INCLUDE sites-enabled/

policy {
  ${confdir}/policy.d
}
