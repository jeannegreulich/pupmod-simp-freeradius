<%
  bool2str = {
    true => 'yes',
    false => 'no'
  }
-%>
log {
  destination = <%= @destination %>
  file = <%= @log_file %>
  syslog_facility = <%= @syslog_facility %>
  stripped_names = <%= bool2str[@stripped_names] %>
  auth = <%= bool2str[@auth] %>
  auth_badpass = <%= bool2str[@auth_badpass] %>
  auth_goodpass = <%= bool2str[@auth_goodpass] %>
<% if @msg_goodpass -%>
  msg_goodpass = "<%= @msg_goodpass %>"
<% end -%>
<% if @msg_badpass -%>
  msg_badpass = "<%= @msg_badpass %>"
<% end -%>
<% if @msg_denied -%>
  msg_denied = "<%= @msg_denied %>"
<% else -%>
  msg_denied = "You are already logged in - access denied"
<% end -%>
}
