listen {
  type = <%= @listen_type %>
<% if [ 'ALL', 'any' ].include? @ipaddr -%>
  ipaddr = *
<% elsif @ipaddr.include?(':') then -%>
  ipv6addr = <%= @ipaddr %>
<% else -%>
  ipaddr = <%= @ipaddr %>
<% end -%>
  port = <%= @port %>
<% if @interface then -%>
  interface = <%= @interface %>
<% end -%>
<% if @per_socket_clients then -%>
  clients = <%= @per_socket_clients %>
<% end -%>
}
