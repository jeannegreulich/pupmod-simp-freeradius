<%
  bool2str = {
    true => 'yes',
    false => 'no'
  }
-%>
client <%= @client_name %> {
<% if @ipaddr.include?(':') then -%>
  ipv6addr = <%= @ipaddr %>
<% else -%>
  ipaddr = <%= @ipaddr %>
<% end -%>
<% if @netmask then -%>
  netmask = <%= @netmask %>
<% end -%>
  secret = <%= @secret %>
<% if @shortname then -%>
  shortname = <%= @shortname %>
<% end -%>
  require_message_authenticator = <%= bool2str[@require_message_authenticator] %>
<% if @nas_type then -%>
  nas_type = <%= @nas_type %>
<% end -%>
<% if @login then -%>
  login = <%= @login %>
<% end -%>
<% if @password then -%>
  password = <%= @password %>
<% end -%>
<% if @virtual_server then -%>
  virtual_server = <%= @virtual_server %>
<% end -%>
<% if @coa_server then -%>
  coa-server = <%= @coa_server %>
<% end -%>
}
